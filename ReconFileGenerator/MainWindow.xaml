<Window x:Class="ReconFileGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ReconFileGenerator"
        mc:Ignorable="d"
        Title="Recon Generator" Height="450" Width="800">
    <StackPanel Margin="5">
        <DockPanel>
            <Label Target="{Binding ElementName=ScrambleText}">Scramble</Label>
            <TextBox Name="ScrambleText" VerticalAlignment="Center" TextChanged="ScrambleText_OnTextChanged"></TextBox>
        </DockPanel>
        <TextBlock Name="ScrambleTextInvalidWarning" Foreground="Crimson" Visibility="Collapsed"/>
        
        <Separator/>
        
        <Label>Cross Color</Label>
        <ListBox>
            <ListBoxItem>Red</ListBoxItem>
            <ListBoxItem>Orange</ListBoxItem>
            <ListBoxItem>Green</ListBoxItem>
            <ListBoxItem>Blue</ListBoxItem>
            <ListBoxItem>White</ListBoxItem>
            <ListBoxItem>Yellow</ListBoxItem>
        </ListBox>
        
        <Separator/>
        
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            
            <ListBox Grid.Column="0">
                <ListBoxItem>Red</ListBoxItem>
                <ListBoxItem>Orange</ListBoxItem>
                <ListBoxItem>Green</ListBoxItem>
                <ListBoxItem>Blue</ListBoxItem>
                <ListBoxItem>White</ListBoxItem>
                <ListBoxItem>Yellow</ListBoxItem>
            </ListBox>
            <ListBox Grid.Column="1">
                <ListBoxItem>1</ListBoxItem>
                <ListBoxItem>1</ListBoxItem>
                <ListBoxItem>1</ListBoxItem>
                <ListBoxItem>1</ListBoxItem>
            </ListBox>
            <ListBox Grid.Column="2">
                <ListBoxItem>1</ListBoxItem>
                <ListBoxItem>1</ListBoxItem>
                <ListBoxItem>1</ListBoxItem>
                <ListBoxItem>1</ListBoxItem>
            </ListBox>
        </Grid>
        
        <ScrollViewer>
            <TextBox IsReadOnly="True" Name="FilePreview"></TextBox>
        </ScrollViewer>
        
        <Separator/>
        
        <Button Click="SaveButton_OnClick" Content="Save To File" Padding="5"/>
        <TextBlock Name="SavedText" FontWeight="Bold" Visibility="Collapsed" Foreground="Green"/>
    </StackPanel>
</Window>
